<div class="container">
    <div class="card-panel yellow center red-text">
        <h1 class="text-center"><i class="fas fa-hamburger"></i> Eat-Da-Burger <i class="fas fa-hamburger"></i></h1>
    </div>
    <br>
    <hr class="style12">

    <div class="row">
        <div class="left-align col s6">
            <h3 class="text-center order-color">Burgers Available to Eat</h3>
            {{#each burgers}} {{#unless this.devoured}}
            <div class="text-center">
                <form action="/burgers/{{this.id}}?_method=PUT" method="POST">
                    <button type="submit" class='btn btn-success btn-margin'> {{this.burger_name}}</button>
                </form>
            </div>
            {{/unless}} {{/each}}
        </div>

        <div class="right-align col s6">
            <h3 class="text-center eaten-color">Burgers Devoured</h3>
            <div class="d-block">
                {{#each burgers}} {{#if this.devoured}}
                <div class='text-center'>
                    <div class="btn btn-dark btn-margin">
                        {{this.burger_name}}
                    </div>
                </div>
                {{/if}} {{/each}}
            </div>
        </div>
    </div>

    <br>
    <hr class="style12">

    <h2 class="add-color text-center">Add A Burger Option</h2>

    <div class="row justify-content-center">
        <div class="col-md-8">
            <form action="/burgers" method="POST">
                <input type="text" class="form-control btn-margin" id="name" name="burger_name">
                <br>
                <button type="submit" class="add-burger-button btn btn-warning btn-margin">Add Burger</button>
            </form>
        </div>
    </div>

</div>