<div class="container">
    <div class="card-panel yellow center red-text">
        <h1 class="text-center"><i class="fas fa-hamburger"></i> Eat-Da-Burger <i class="fas fa-hamburger"></i></h1>
    </div>
    <br>
    <div class="row">
        <div class="col s12 z-depth-5 mainpanel">
            <div id="mainpanel-content">
                <div class="col s6">
                    <h3>Select A Burger to Eat</h3>
                    {{#each burgers}} {{#unless this.devoured}}
                    <div class="row">
                        <form action="/burgers/{{this.id}}?_method=PUT" method="POST">
                            <button type="submit" class='col s6 btn-large waves-effect red'>
                                {{this.burger_name}}</button>
                        </form>
                    </div>
                    {{/unless}} {{/each}}
                </div>
                <div class="col s6">
                    <h3>Burgers Devoured</h3>
                    {{#each burgers}} {{#if this.devoured}}
                    <div class="row">
                        <div class="col s6 btn-large waves-effect blue">
                            {{this.burger_name}}
                        </div>
                    </div>
                    {{/if}} {{/each}}
                </div>
            </div>
            <br>
            <h2>Add A Burger Option</h2>
            <div class="row">
                <div class="col s12">
                    <form action="/burgers" method="POST">
                        <input type="text" class="form-control btn-margin" id="name" name="burger_name"
                            placeholder="Burger Name">
                        <br>
                        <button type="submit" class="add-burger-button btn waves-effect green">Add Burger<i
                                class="material-icons right">send</i></button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>